<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <SearchView
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/flowersBox"

        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="154dp"
        android:orientation="horizontal"
        android:background="#007251"
        >

        <ImageView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:src="@drawable/tulip"
            android:paddingLeft="20dp"
            android:layout_gravity="center_horizontal"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:text="FLOWERS"
        android:textSize="40dp"
        android:gravity="center_vertical"
        android:textColor="@android:color/black"
        android:fontFamily="monospace" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/herbBox"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:orientation="horizontal"
        android:background="#d1e2a9"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:text="    HERBS"
            android:textSize="40dp"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:fontFamily="monospace"
            />

        <ImageView
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:src="@drawable/herb"
            android:paddingLeft="17dp"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/treeBox"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:orientation="horizontal"
        android:background="#d03772"
        >

        <ImageView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:src="@drawable/forest"
            android:paddingLeft="20dp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:text=" TREES"
            android:textSize="40dp"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:fontFamily="monospace"
            />
    </LinearLayout>



</LinearLayout>